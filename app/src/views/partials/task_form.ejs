<div id="task-form-container" class="task-form-container" style="display: none;">
    <form id="task-form">
        <label for='title'>Title:</label>
        <input type="text" id="title" placeholder="Task Title" required>
        <br>

        <label for="description">Description:</label>
        <textarea id="description" placeholder="Task Description" cols="48" rows="4" required></textarea>
        <br>

        <label for="dueDate">Due Date:</label>
        <input type="date" id="dueDate" value="2024-02-01" min="2024-01-01" required/>
        <br>

        <label for="priority">Priority:</label>
        <select id="priority" required>
            <option value="0">Lowest</option>
            <option value="1">Low</option>
            <option value="2">Medium</option>
            <option value="3">High</option>
            <option value="4">Urgent</option>
        </select>
        <br>

        <% if (endpoint === '/admin') { %>
            <label for="taskUserId">Owner ID:</label>
            <input type="text" id="taskUserId" placeholder="Defaults to your ID."/>
            <br>
        <% } %>
        <button type="button" onclick="submitTaskForm(formTaskId)">Submit</button>
    </form>
</div>